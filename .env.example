# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database?options"
DIRECT_URL="postgresql://username:password@host:port/database?options"

# Supabase Configuration (Public - Safe to expose)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"

# Application Configuration
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="your-nextauth-secret-key-minimum-32-characters"

# Supabase Service Role (SECRET - Never expose in client)
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# OpenAI API (SECRET - Never expose in client)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Security Configuration
CSRF_SECRET="your-csrf-secret-minimum-32-characters"

# Development Environment Variables (DO NOT USE IN PRODUCTION)
# Remove or set to false in production deployment
DEV_AUTH_ENABLED="false"
DEV_AUTH_EMAIL="dev@your-domain.com"

# Feature Flags (Optional)
FEATURE_DASHBOARD_MOCK="0"
FEATURE_DASHBOARD_PLAYERS_LIVE="1"
DEBUG_TENANT_SLUG="0"
DEBUG_DASHBOARD="0"

# Monitoring & Observability (Optional)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
ANALYTICS_ID="your-analytics-id"

# Email Configuration (Optional)
SMTP_HOST="smtp.your-provider.com"
SMTP_PORT="587"
SMTP_USER="your-smtp-username"
SMTP_PASS="your-smtp-password"
FROM_EMAIL="noreply@your-domain.com"

# Production Deployment Variables
NODE_ENV="production"
VERCEL_ENV="production"